{
  "name": "@pulsar-framework/transformer",
  "version": "1.0.0-alpha.6",
  "description": "PSR (Pulsar Syntax Runtime) to TypeScript transformer with Registry Pattern code generation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./pipeline": {
      "types": "./dist/pipeline/index.d.ts",
      "default": "./dist/pipeline/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "verify": "tsx verify-integration.ts",
    "test:integration": "vitest run tests/integration-full-pipeline.test.ts"
  },
  "devDependencies": {
    "@pulsar-framework/pulsar.dev": "workspace:0.7.0-alpha",
    "@types/jsdom": "^21.1.7",
    "@vitest/coverage-v8": "^2.1.8",
    "jsdom": "^25.0.1",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "pulsar",
    "psr",
    "typescript",
    "transformer",
    "compiler",
    "registry-pattern",
    "reactive"
  ],
  "author": "Tadeo Piana <https://www.linkedin.com/in/tadeopiana/>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/binaryjack/pulsar-transformer.git"
  },
  "homepage": "https://github.com/binaryjack/pulsar-transformer#readme",
  "bugs": {
    "url": "https://github.com/binaryjack/pulsar-transformer/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
